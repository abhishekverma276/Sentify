{
  "manifest_version": 3,
  "name": "YouTube Sentiment Analysis",
  "version": "1.0",
  "description": "Fetch YouTube comments and perform sentiment analysis.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_size": {
      "width": 600,
      "height": 800
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ]
}
